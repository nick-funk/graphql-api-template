{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
  },
  "include": [
    "./src/**/.*.js",
    "./src/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
